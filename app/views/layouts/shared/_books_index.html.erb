
<h2>Books</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= attachment_image_tag book.user, :my_image, :fill, 50, 50,
                                                  fallback: "no_image.jpg",
                                                  size: '50x50',
                                                  class: "img-circle" %>
          </td>
          <td><%= link_to book.title, book_path(book), class: "book_#{book.id}" %></td>
          <td><%= book.opinion %></td>
        </tr>
      <% end %>
  </tbody>
</table>
