<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h1>Editing Book</h1>

    <%= form_for(@book) do |f| %>

      <div class="field row">
        <%= f.label :title, "Title" %>
        <%= f.text_field :title, class: "col-xs-12 book_title" %>
      </div>
      <div class="field row">
        <%= f.label :opinion, "Opinion" %>
        <%= f.text_area :opinion, class: "col-xs-12 book_body" %>
      </div>
      <div class="actions row">
        <%= f.submit "Update Book", class: "btn btn-primary col-xs-12" %>
      </div>
    <% end %>
    <%= link_to "Show", book_path(@book), class: "book_#{@book.id}" %> |
    <%= link_to "Back", :back, class: "back" %>
  </div>
  <div class="col-md-3"></div>
</div>